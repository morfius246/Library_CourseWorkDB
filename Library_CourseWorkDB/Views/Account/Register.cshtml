@model Library_CourseWorkDB.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <div style="margin:0 auto; width: 400px">
            <div class="form-group">
                @Html.TextBoxFor(m => m.Login, new { @class = "form-control", @placeholder = "Логин" })
                @Html.ValidationMessageFor(model => model.Login, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Имя" })
                @Html.ValidationMessageFor(model => model.Name, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", @placeholder = "Фамилия" })
                @Html.ValidationMessageFor(model => model.LastName, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control", @placeholder = "Отчество" })
                @Html.ValidationMessageFor(model => model.SecondName, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.Passport, new { @class = "form-control", @placeholder = "Серия паспорта" })
                @Html.ValidationMessageFor(model => model.Passport, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", @placeholder = "Номер телефона" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.PlaceOfWork, new { @class = "form-control", @placeholder = "Место работы" })
                @Html.ValidationMessageFor(model => model.PlaceOfWork, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(m => m.WorkPosition, new { @class = "form-control", @placeholder = "Должность" })
                @Html.ValidationMessageFor(model => model.WorkPosition, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Пароль" })
                @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
            </div>

            <div class="form-group">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @placeholder = "Подтверждение пароля" })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { style = "color:red" })
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" />
            </div>
        </div>
        
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
