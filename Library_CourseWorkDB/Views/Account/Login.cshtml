@model Library_CourseWorkDB.Models.LoginModel
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<hgroup class="title"></hgroup>
<div class="row" style="margin:0 auto">
    <div style="margin:0 auto">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", @style = "margin:0 auto; width:400px" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <br>
            <div class="form-group">
                <div >
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Логин" })
                    @Html.ValidationMessageFor(model => model.UserName, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { style = "color:red" })
                </div>
            </div>
            <div class="form-group">
                <div>
                    <div class="checkbox">
                        <label>
                            @Html.CheckBoxFor(m => m.RememberMe) Запомнить меня
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div>
                    <button type="submit" class="btn btn-primary">Войти</button>
                </div>
            </div>
        }
    </div>
</div>
